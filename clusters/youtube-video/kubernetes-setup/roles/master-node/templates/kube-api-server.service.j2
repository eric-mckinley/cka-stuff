[Unit]
Description=Kubernetes Api Service

[Service]
Type=simple
ExecStart=/usr/bin/kube-apiserver --etcd-servers=http://localhost:{{ etcd_port }} --service-cluster-ip-range=10.0.0.0/16 --bind-address=0.0.0.0 --insecure-bind-address=0.0.0.0
Restart=on-failure
User=root

[Install]
WantedBy=multi-user.target